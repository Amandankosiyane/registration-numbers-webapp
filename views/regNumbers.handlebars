<head>
        <meta charset="utf-8">
        <title>Home page</title>
        <link rel="stylesheet" href="../css/registration_numbers_webapp.css">
</head>

<body>
        <div class="container" align="center">
        <h1>Registration Number Application</h1>
<div class="application">
        <form class="" action="/regNumbers" method="post">
                <br><br>
                <label><b>RegNumber:</b></label>
                <input type="text" name="regNum" placeholder="Please type a reg num here" required="">
                <input type="submit" name="numberPlate" value="ADD">
        </form>
        <br><br>
        <form class="" action="/filter" method="post">
                <input type="radio" name="loc" value="CA">Cape Town
                <input type="radio" name="loc" value="CY">Bellville
                <input type="radio" name="loc" value="CJ">Paarl
                <input type="radio" name="loc" value="CEY">Strand
                <input type="submit" name="filterRegs" value="SHOW">

        </form>
        <br><br>
        {{#each regNumbers}}
        <li class="reg">{{this.numberPlate}}</li>
        {{/each}}

        {{#each filter}}
        <li class="filter">{{this.numberPlate}}</li>
{{/each}}
{{showAllRegs}}
        {{messages.error}}
        <br><br>

</div>
        <!-- {{regNum}} -->
</div>
</body>
